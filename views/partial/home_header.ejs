<body class="p-0 min-vh-100 d-flex flex-column">
  <header>
    <div class="container-fluid ps-2 pe-2 pt-3">

      <!-- Below are the list of search engine based respinsive screen sizes -->

      <!-- Available for all screen sizes above lg -->
      <nav class="navbar navbar-expand justify-content-between mb-0" id="first-nav">

        <div class="container-fluid">
          <div class=" navbar-collapse" id="navbarsExample11">

            <a class="navbar-brand col me-0 fs-4" href="/" id="logo">LodgeLiberia</a>

            <form class="p-1 d-none d-lg-block" action="/search_result" method="get" id="search-box">

              <div class="input-group">

                <input type="text"
                  class="text-black form-control border-top-0 border-bottom-0 border-start-0 fs-6 place_holder_control"
                  placeholder="Where to?" name="place_location" id="place_location">

                <input type="number"
                  class="text-black form-control border-top-0 border-bottom-0 border-start-0 fs-6 place_holder_control"
                  placeholder="Price" name="place_price" id="place_price">

                <select class="form-select border-top-0 border-bottom-0 border-end-0 text-black bg-transparent"
                  aria-label="Categories of places" id="search_dropdown" name="search_dropdown">
                  <option selected id="select-place-holder">Property</option>
                  <option value="Apartment">Apartment</option>
                  <option value="House">House</option>
                  <option value="Room">Room</option>
                  <option value="Experience" id="experiment">Experience</option>
                </select>

                <button class="btn btn-success" type="submit" id="search-btn"><i class="fa-solid fa-magnifying-glass"
                    style="color: #ffffff;"></i></button>

              </div>

            </form>

            <!-- dropdown menu -->
            <!-- <div class="dropdown">
              <a class="btn btn-secondary dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fa-solid fa-bars"></i></a>
            
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="places_booked">PLaces booked</a></li>
                <li><a class="dropdown-item" href="host_property">Host your property</a></li>
                <li><a class="dropdown-item" href="finance">Finance</a></li>
              </ul>
            </div> -->


            <!-- Login user Option Button -->
            <% if (user) { %>
              <!-- User Account button -->
            <div class="d-flex col justify-content-end">

              <!-- Can put a hamburger menu here? -->
               <!-- Default dropleft button -->
               <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="signup_signin_btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="width: 180px;">
                  <%= user.username %>
                </button>
                <div class="dropdown-menu bg-light border border-dark" aria-labelledby="dropdownMenuButton" style="max-width: 180px; min-width: 180px;">
                  <a class="dropdown-item lodgeliberia_textcolor_color fw-bold" href="/my_booking">My Booking</a>
                  <a class="dropdown-item lodgeliberia_textcolor_color fw-bold" href="/hostplace">Host Property</a>
                  <a class="dropdown-item lodgeliberia_textcolor_color fw-bold" href="/my_profile">Profile</a>
                  <a class="dropdown-item lodgeliberia_textcolor_color fw-bold" href="/logout">Logout</a>
                </div>
              </div>            
            </div>
            <!-- User Account button -->

            <!-- New user signup button -->
            <% } else { %>
              <!-- signup and login button -->
            <div class="d-flex col justify-content-end">
              <a class="text-decoration-none p-2 fw-bold" id="signup_signin_btn" href="/login">
                <span class="text-black">Signup/Login</span> &nbsp;
                <i class="fa-solid fa-user" style="color: black;"></i>
              </a>
            </div>
            <!-- signup and login button -->
            <% } %>

          </div>
        </div>
      </nav>


      <pre class="text-right pe-3 text-black" id="motto"><i>"Your Home in Liberia"</i></pre>

      <!-- Available for all screen sizes above md -->
      <nav class="navbar navbar-expand justify-content-center d-none d-md-block d-lg-none mb-0">

        <div class="container-fluid">
          <div class=" navbar-collapse justify-content-center">

            <form class="p-1" action="/search_result" method="get" id="search-box">

              <div class="input-group">

                <input type="text"
                  class="text-black form-control border-top-0 border-bottom-0 border-start-0 fs-6 place_holder_control"
                  placeholder="Where to?" name="place_location" id="place_location">

                <input type="number"
                  class="text-black form-control border-top-0 border-bottom-0 border-start-0 fs-6 place_holder_control"
                  placeholder="Price" name="place_price" id="place_price">

                <select class="form-select border-top-0 border-bottom-0 border-end-0 text-black bg-transparent"
                  aria-label="Categories of places" id="search_dropdown" name="search_dropdown">
                  <option selected id="select-place-holder">Property</option>
                  <option value="Apartment">Apartment</option>
                  <option value="House">House</option>
                  <option value="Room">Room</option>
                  <option value="Experience">Experience</option>
                </select>

                <button class="btn btn-success" type="submit" id="search-btn"><i class="fa-solid fa-magnifying-glass"
                    style="color: #ffffff;"></i></button>
              </div>

            </form>
          </div>
        </div>
      </nav>

      <!-- Available for all screen sizes below md -->
      <nav class="navbar navbar-expand justify-content-center mb-0 d-md-none">

        <div class="d-flex align-items-center">
          <div class=" navbar-collapse" id="navbarsExample11">

            <form class="p-1" action="/search_result" method="get" id="search-box">

              <div class="input-group">
                <input type="text" class="text-black form-control border-top-0 border-bottom-0 border-start-0"
                  placeholder="Where to?" id="sm_mobile_search" data-bs-toggle="modal"
                  data-bs-target="#small_extended_search_form">
                <button class="btn btn-success" type="submit" id="search-btn"><i class="fa-solid fa-magnifying-glass"
                    style="color: #ffffff;"></i></button>
              </div>

              <!-- Modal -->
              <div class="modal fade" id="small_extended_search_form" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog bg-black">
                  <div class="modal-content bg-black">
                    <div class="modal-header border-0">
                      <h5 class="modal-title" id="logo">LodgeLiberia</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <!-- Modal Body -->
                    <div class="modal-body">

                      <input type="text"
                        class="text-black form-control border-top-0 border-bottom-0 border-start-0 bg-white fs-6 place_holder_control"
                        placeholder="Search location: County, City, Place Address" name="place_location"
                        id="place_location">
                      <br>

                      <input type="number"
                        class="text-black form-control border-top-0 border-bottom-0 border-start-0 bg-white fs-6 place_holder_control"
                        placeholder="Price" name="place_price" id="place_price">
                      <br>

                      <select class="form-select border-top-0 border-bottom-0 border-end-0 text-black bg-white"
                        aria-label="Categories of places" id="search_dropdown" name="search_dropdown">
                        <option selected id="select-place-holder">Property</option>
                        <option value="Apartment">Apartment</option>
                        <option value="House">House</option>
                        <option value="Room">Room</option>
                        <option value="Experience">Experience</option>
                      </select>

                    </div>
                    <!-- Modal Body -->

                    <div class="modal-footer border-0">
                      <button class="btn btn-success" type="submit" id="search-btn"><i
                          class="fa-solid fa-magnifying-glass" style="color: #ffffff;"></i>&nbsp;Search</button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- Modal -->

            </form>
          </div>
        </div>
      </nav>

    </div>
